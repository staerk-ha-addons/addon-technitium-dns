{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Home Assistant",
      "type": "shell",
      "command": "supervisor_run",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "showReuseMessage": false
      }
    },
    {
      "label": "Dev Bootstrap",
      "type": "shell",
      "command": "$WORKSPACE_DIRECTORY/.devcontainer/dev_bootstrap.sh",
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "clear": true,
        "showReuseMessage": false
      }
    },
    {
      "label": "Install Addon",
      "type": "shell",
      "command": "ha addons install \"local_${input:addonName}\" --log-level debug;",
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": false
      },
      "dependsOn": [
        "Kill logs"
      ]
    },
    {
      "label": "Start Addon",
      "type": "shell",
      "command": "ha addons start \"local_${input:addonName}\" --log-level debug;",
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": false
      },
      "dependsOn": [
        "Kill logs"
      ]
    },
    {
      "label": "Stop Addon",
      "type": "shell",
      "command": "ha stop start \"local_${input:addonName}\" --log-level debug;",
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": false
      },
      "dependsOn": [
        "Kill logs"
      ]
    },
    {
      "label": "Uninstall Addon",
      "type": "shell",
      "command": "ha addons uninstall --remove-config \"local_${input:addonName}\" --log-level debug;",
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": false
      },
      "dependsOn": [
        "Kill logs"
      ]
    },
    {
      "label": "Rebuild Addon",
      "type": "shell",
      "command": "ha addons rebuild \"local_${input:addonName}\" --log-level debug;",
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": false
      },
      "dependsOn": [
        "Kill logs"
      ]
    },
    {
      "label": "Reinstall Addon",
      "type": "shell",
      "command": "",
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": false
      },
      "dependsOn": [
        "Kill logs",
        "Uninstall Addon",
        "Install Addon",
        "Start Addon",
        "Follow Addon Logs"
      ],
      "dependsOrder": "sequence"
    },
    {
      "label": "Rebuild Addon",
      "type": "shell",
      "command": "",
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": false
      },
      "dependsOn": [
        "Kill logs",
        "Rebuild Addon",
        "Start Addon",
        "Follow Addon Logs"
      ]
    },
    {
      "label": "Follow Addon Logs",
      "type": "shell",
      "command": "docker logs --follow addon_local_${input:addonName};",
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "clear": true,
        "close": true,
        "showReuseMessage": false
      },
      "dependsOn": [
        "Kill logs"
      ]
    },
    {
      "label": "Kill logs",
      "type": "shell",
      "command": "pkill -f 'docker logs --follow addon_local_${input:addonName}' && pkill -f 'docker logs --follow \"addon_local_${input:addonName}\"' && sleep 1 || true",
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "clear": true,
        "close": true,
        "showReuseMessage": false
      }
    }
  ],
  "inputs": [
    {
      "id": "addonName",
      "type": "pickString",
      "default": "technitium-dns",
      "description": "Name of addon (to add your addon to this list, please edit .vscode/tasks.json)",
      "options": [
        "technitium-dns"
      ]
    }
  ]
}